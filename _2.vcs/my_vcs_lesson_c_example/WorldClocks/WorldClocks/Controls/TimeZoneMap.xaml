<UserControl x:Class="BinaryComponents.WorldClocks.Controls.TimeZoneMap"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Viewbox>
		<Canvas Width="100" Height="50">
			<Rectangle Width="100" Height="50">
				<Rectangle.Fill>
					<LinearGradientBrush StartPoint="0.5,0.1" EndPoint="0.6,0.9">
						<LinearGradientBrush.GradientStops>
							<GradientStop Offset="0.0" Color="#888888" />
							<GradientStop Offset="1.0" Color="#111111" />
						</LinearGradientBrush.GradientStops>
					</LinearGradientBrush>
				</Rectangle.Fill>
			</Rectangle>
			<Image Source="pack://application:,,,/Resources/Images/World.png" Width="100" Height="50" Opacity="0.5" />
			<Image x:Name="_overlayImage" Width="100" Height="50" />
			<Rectangle Width="100" Height="50" Stroke="White" StrokeThickness="0.5" />
		</Canvas>
    </Viewbox>
    
</UserControl>
