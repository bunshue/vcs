<Application x:Class="BinaryComponents.WorldClocks.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wx="clr-namespace:BinaryComponents.WorldClocks.Windows"
    ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
    
		<Thickness x:Key="Margin">3</Thickness>
		
		<Style x:Key="Dialog">
			<Setter Property="Control.Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
		</Style>
  
		<Style x:Key="OtherControl">
			<Setter Property="Control.Margin" Value="{StaticResource Margin}" />
		</Style>

		<Style x:Key="InputBox">
			<Setter Property="Control.Margin" Value="{StaticResource Margin}" />
			<Setter Property="Control.VerticalAlignment" Value="Center" />
		</Style>

		<Style x:Key="InputBoxLabel">
			<Setter Property="Control.VerticalAlignment" Value="Center" />
			<Setter Property="Control.Margin" Value="{StaticResource Margin}" />
		</Style>

		<Style x:Key="StandardButton">
			<Setter Property="Control.Width" Value="80" />
			<Setter Property="Control.Margin" Value="{StaticResource Margin}" />
		</Style>

		<Style x:Key="Container">
			<Setter Property="Control.Margin" Value="{StaticResource Margin}" />
		</Style>

    </Application.Resources>
</Application>
